services:
  {{ project_name }}:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: {{ project_name }}
    ports:
      - "8000:8000"
    volumes:
      - .:/app
    env_file:
      - .env
      - .env.docker
    environment:
      - ENV=development
    networks:
      - appnet
    command: uv run main.py

  mlflow:
    image: "ghcr.io/mlflow/mlflow"
    ports:
      - "5000:5000"
    volumes:
      - ./mlflow.db:/mlflow/mlflow.db
      - ./mlruns:/mlflow/mlruns
    networks:
      - appnet
    command: >
      mlflow server 
      --backend-store-uri sqlite:///mlflow/mlflow.db 
      --default-artifact-root /mlflow/mlruns 
      --host 0.0.0.0 
      --port 5000

networks:
  appnet:
    driver: bridge