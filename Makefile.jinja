tests:
	@echo "Running tests..."
	pytest --cov=funfunfun --cov-report=xml --cov-report=html

lint:
	@echo "Running linters..."
	uv run ruff check funfunfun tests

format:
	@echo "Formatting code..."
	uv run ruff format funfunfun tests

clean:
	@echo "Cleaning up..."
	rm -rf .pytest_cache .coverage htmlcov coverage.xml

docs:
	@echo "Building documentation..."
	uv run mkdocs build
